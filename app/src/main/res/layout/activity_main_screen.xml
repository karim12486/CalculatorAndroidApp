<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen"
    android:background="@color/white">

    <Button
        android:id="@+id/Calculator_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:backgroundTint="#717403"
        android:text="Go to Calculator"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/facebook_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Calculator_nav"
        android:layout_marginTop="10dp"
        android:backgroundTint="#4f69a2"
        android:text="Go to Facebook"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>