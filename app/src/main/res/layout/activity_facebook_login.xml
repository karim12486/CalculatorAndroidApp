<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacebookLogin"
    android:background="#3b5999"
    >

    <TextView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="facebook"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/klavika_bold"
        />
    <LinearLayout
        android:id="@+id/datafillers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Logo"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_marginTop="35dp"
        >
        <EditText
            android:id="@+id/username_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:background="@color/white"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:textColor="@color/black"
            android:textColorHint="#797979"
            android:hint="Email or phone number"
            />
        <EditText
            android:hint="Password"
            android:id="@+id/password_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:background="@color/white"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textColorHint="#797979"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/datafillers"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="#6181c8"
        android:text="Log In"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/Help_Center"
        app:layout_constraintStart_toStartOf="@id/Help_Center"
        app:layout_constraintEnd_toEndOf="@id/Help_Center"
        android:text="Sign Up for Facebook"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:id="@+id/Help_Center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="70dp"
        android:text="Help Center"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>